                                        <!-- Content Area -->
                                        <div>

                                            <select class="form-control js-example-responsive" id="cliente" style="width: 100%">
                                                <option value="C0001">DUI: 00348348 - NCR: 022323923 - NOMBRE: Cliente Texaco</option>
                                            </select><br /><br />
