                                            <a href="#" class="d-flex align-items-center">
                                                <i class="icon icon-play-circle-o mr-2"></i>
                                                <span class="text-dark f-12">How it works</span>
                                            </a>
                                        </div>

                                    </div>
                                    <!-- /card body -->
                                </div>
                                <!-- /carousel -->
                            </div>
                        </div>
                    </div>
                    <!-- /card body -->

                </div>
                <!-- /card -->

            </div>
        </div>
        <!-- /grid -->


    </div>
