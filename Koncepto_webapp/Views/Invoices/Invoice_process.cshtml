                                    <!-- /card body -->
                                    <!-- Card Body -->
                                    <div class="card-body">

                                        <!-- Card Title-->
                                        <span class="d-block f-16 text-light-gray mb-2">Seleccion de productos</span>
                                        <h2 class="card-title font-weight-normal">Filtre los productos por categoria o realice la busqueda por SKU.</h2>
                                        <!-- Card Title-->
                                        <!-- Content Area -->
                                        <!-- /content area -->
                                        <div class="row">
                                            <div class="col-md-4">
                                                <input type="text" id="codigosku" placeholder="SKU" class="form-control" onkeypress="borrar1()"/>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" id="descripcionprod" placeholder="Nombre de producto" class="form-control" onkeypress="borrar2()"/>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" id="codigobarras" placeholder="Codigo de barras" class="form-control" onkeypress="borrar3()"/>
                                                <label class="d-flex align-items-center">

                                                    <i class="icon icon-play-circle-o mr-2"></i>
                                                    <span class="text-dark f-12">Coloque el cursor sobre la caja de texto y escanee el codigo de barras</span>
                                                </label>
                                            </div>
                                        </div>
                                        <button class="btn btn-secondary" onclick="buscarProducto()">Buscar producto</button><br /><br />
                                        <h2 class="card-title font-weight-normal">O utilice el asistente de productos abajo.</h2>
                                        <!-- Content Area -->
                                        <div class="custom-post-title">
                                            <div class=" mt-2">

                                                @foreach (var itemc in ViewBag.lstCategories)
            {
                                    <button id="btn_@itemc" type="button" style="margin-top: 10px;" class="btn btn-outline-primary form-pill btnsl" onclick="filter('@itemc')">@itemc</button>
}
                                                <button type="button" class="btn btn-light form-pill" style="margin-top: 10px;" onclick="filter_clear()">Clear filters</button>

                                            </div><hr />
                                            <div id="mainsub">

                                                @foreach (var itemc in ViewBag.lstCategories)
            {
                                    <div class="mt-2" id="@itemc">
