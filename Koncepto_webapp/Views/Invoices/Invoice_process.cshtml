@{
    ViewBag.Title = "Invoice_process";

}

<!-- Site Content Wrapper -->
<div class="dt-content-wrapper">

    <!-- Site Content -->
    <div class="dt-content">

        <!-- Brand tool -->
        <div class="dt-brand__tool mb-8 d-lg-none" data-toggle="main-sidebar">
            <div class="hamburger-inner"></div>
        </div>
        <!-- /brand tool -->
        <!-- Page Header -->
        <div class="dt-page__header">
            <h1 class="dt-page__title">Facturacion</h1>
        </div>

        <div class="alert alert-warning" role="alert">
            Ejemplo de alerta al saber que cliente No tiene credito disponible o tiene creditos vencidos.
            <a href="javascript:void(0)" class="alert-link">
                Ver historial
            </a>

        </div>

        <!-- /page header -->
        <!-- Grid -->
        <div class="row">
            <div class="col-xl-12">
                <!-- Card -->
                <div class="card dt-card-carousel">

                    <!-- Card Body -->
                    <div class="card-body p-0">
                        <div class="row no-gutters h-100">
                            <div class="col-sm-12 order-sm-1">
                                <!-- Carousel -->
                                <div class="owl-carousel owl-theme">
                                    <!-- Card Body -->
                                    <div class="card-body disable-owl-swipe">

                                        <!-- Card Title-->
                                        <span class="d-block f-16 text-light-gray mb-2">Ingreso de Cliente</span>
                                        <h2 class="card-title font-weight-normal">Busqueda por DUI, NRC o Nombre de Cliente</h2>
                                        <!-- Card Title-->
                                        <!-- Content Area -->
                                        <div>

                                            <select class="form-control js-example-responsive" id="cliente" style="width: 100%">
                                                <option value="C0001">DUI: 00348348 - NCR: 022323923 - NOMBRE: Cliente Texaco</option>
                                            </select><br /><br />
                                            <div class="float-right">
                                                <button onclick="moveNext_slide()" class="btn btn-secondary">Siguiente</button>
                                            </div>

                                        </div>
                                        <!-- /content area -->
                                        <br />
                                        <br />
                                        <br />
                                        <div class="mb-3" id="clientenoexiste">
                                            <a href="#" class="d-flex align-items-center" data-toggle="modal"
                                               data-target="#form-modal">
                                                <i class="icon icon-info mr-2"></i>
                                                <span class="text-dark f-12">Click aqui si el cliente no existe</span>
                                            </a>
                                        </div>

                                    </div>
                                    <!-- /card body -->
                                    <!-- Card Body -->
                                    <div class="card-body disable-owl-swipe">

                                        <!-- Card Title-->
                                        <span class="d-block f-16 text-light-gray mb-2">Seleccion de productos</span>
                                        <h2 class="card-title font-weight-normal">Filtre los productos por categoria o realice la busqueda por SKU.</h2>
                                        <!-- Card Title-->
                                        <!-- Content Area -->
                                        <!-- /content area -->
                                        <div class="row">
                                            <div class="col-md-4">
                                                <input type="text" id="codigosku" placeholder="SKU" class="form-control" onkeypress="borrar1()" />
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" id="descripcionprod" placeholder="Nombre de producto" class="form-control" onkeypress="borrar2()" />
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" id="codigobarras" placeholder="Codigo de barras" class="form-control" onkeypress="borrar3()" />
                                                <label class="d-flex align-items-center">

                                                    <i class="icon icon-play-circle-o mr-2"></i>
                                                    <span class="text-dark f-12">Coloque el cursor sobre la caja de texto y escanee el codigo de barras</span>
                                                </label>
                                            </div>
                                        </div>
                                        <button class="btn btn-secondary" onclick="buscarProducto()">Buscar producto</button><br /><br />

                                        <h1>O busque aqui</h1>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <select class="form-control" style="width:100%;" onchange="filter_linea()" id="sel_grupo">
                                                    <option value="0">Seleccione Grupo</option>
                                                    @foreach (var grupoproducto in ViewBag.lstCategories)
                                                    {
                                                        <option value="@grupoproducto.id_grupo">@grupoproducto.grupo</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <select class="form-control" style="width:100%;" onchange="filter_marca()" id="sel_linea"></select>
                                            </div>
                                            <div class="col-md-4">
                                                <select class="form-control" style="width:100%;" onchange="mostrar_productos()" id="sel_marca"></select>
                                            </div>

                                        </div>
                                        <hr />
                                        <br /><br />
                                        <!-- Grid Item -->
                                        <div class="row" id="listaproductos">


                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="float-left">
                                                    <a href="#" onclick="movePrev_slide()" class="text-dark">
                                                        <i class="icon icon-arrow-left icon-fw icon-1x"></i><span class="display-6 align-middle ml-1">Volver</span>
                                                    </a>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="float-right">
                                                    <button onclick="moveNext_slide()" class="btn btn-secondary">Siguiente</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /card body -->
                                    <!-- Card Body -->
                                    <div class="card-body disable-owl-swipe">

                                        <!-- Card Title-->
                                        <span class="d-block f-16 text-light-gray mb-2">Step-3</span>
                                        <h2 class="card-title font-weight-normal">Create your account “FREE”</h2>
                                        <!-- Card Title-->
                                        <!-- Content Area -->
                                        <p class="card-text">
                                            Consectetur adipisicing elit. Autem
                                            blanditiis consectetur ducimus error est et fugiat impedit in
                                            ipsam, odio omnis, praesentium quas rem repellendus
                                            reprehenderit sequi suscipit veritatis vitae.
                                        </p>
                                        <!-- /content area -->

                                        <div class="mb-3">
                                            <a href="#" class="d-flex align-items-center">
                                                <i class="icon icon-play-circle-o mr-2"></i>
                                                <span class="text-dark f-12">How it works</span>
                                            </a>
                                        </div>

                                    </div>
                                    <!-- /card body -->
                                </div>
                                <!-- /carousel -->
                            </div>
                        </div>
                    </div>
                    <!-- /card body -->
                    <!-- Theme Chooser -->
                    <div class="dt-customizer-toggle">
                        <a href="javascript:void(0)" data-toggle="customizer">
                            <i class="icon icon-shopping-cart "></i>
                        </a>
                    </div>
                    <!-- /theme chooser -->
                    <!-- Customizer Sidebar -->
                    <aside class="dt-customizer dt-drawer position-right">
                        <div class="dt-customizer__inner">

                            <!-- Customizer Header -->
                            <div class="dt-customizer__header">

                                <!-- Customizer Title -->
                                <div class="dt-customizer__title">
                                    <h3 class="mb-0">Carrito de compras</h3>
                                </div>
                                <!-- /customizer title -->
                                <!-- Close Button -->
                                <button type="button" class="close" data-toggle="customizer">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <!-- /close button -->

                            </div>
                            <!-- /customizer header -->
                            <!-- Customizer Body -->
                            <div class="dt-customizer__body ps-custom-scrollbar">
                                <!-- Customizer Body Inner  -->
                                <div class="dt-customizer__body-inner">

                                    <!-- Section -->
                                    <section>
                                        <h4>Productos</h4>

                                        <!-- Widget -->
                                        <div class="dt-widget dt-widget-hover-bg text-light-gray">

                                            <!-- Widget Item -->
                                            <div class="dt-widget__item">

                                                <!-- Widget Image -->
                                                <div class="dt-widget__img">
                                                    <img class="img-fluid" style="height:60px; width:60px;" src="https://via.placeholder.com/115x58"
                                                         alt="Logo">
                                                </div>
                                                <!-- /widget image -->
                                                <!-- Widget Info -->
                                                <div class="dt-widget__info text-truncate">
                                                    <div class="dt-widget__title text-truncate">
                                                        <a href="#">Nombre de producto</a>

                                                    </div>
                                                    <p class="dt-widget__subtitle text-truncate">
                                                        Precio, cantidad y total
                                                    </p>
                                                </div>
                                                <!-- /widget info -->
                                                <!-- Widget Extra -->
                                                <div class="dt-widget__extra">
                                                    <!-- Show Content -->
                                                    <!-- /show content -->
                                                    <!-- Hide Content -->
                                                    <div class="hide-content">
                                                        <!-- Action Button Group -->
                                                        <div class="action-btn-group">

                                                            <button class="btn btn-default text-danger dt-fab-btn">
                                                                <i class="icon icon-circle-remove-o icon-1x"></i>
                                                            </button>
                                                        </div>
                                                        <!-- /action button group -->
                                                    </div>
                                                    <!-- /hide content -->
                                                </div>
                                                <!-- /widget extra -->
                                            </div>
                                            <!-- /widgets item -->
                                        </div>


                                    </section>
                                    <!-- /section -->
                                    <!-- Section -->
                                    <section>
                                        <h4>Total</h4>


                                    </section>
                                    <!-- /section -->
                                    <!-- Section -->
                                    <!-- /section -->

                                </div>
                                <!-- /customizer body inner -->
                            </div>
                            <!-- /customizer body -->

                        </div>
                    </aside>
                    <!-- /customizer sidebar -->

                </div>
                <!-- /card -->

            </div>
        </div>
        <!-- /grid -->


    </div>
    <!-- /site content -->
    <!-- Footer -->
    @Html.Partial("~/Views/Shared/Footer.cshtml")
    <!-- /footer -->

</div>
<!-- /site content wrapper -->
<!-- Modal -->
<div class="modal fade" id="form-modal" tabindex="-1" role="dialog"
     aria-labelledby="model-8"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal Content -->
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="modal-title" id="model-8">Nuevo cliente</h3>
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- /modal header -->
            <!-- Modal Body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="name"
                           class="col-form-label">Nombre de cliente:</label>
                    <input class="form-control" id="name" type="text">
                </div>
                <div class="form-group">
                    <label for="message-text"
                           class="col-form-label">Grupo:</label>
                    <select id="grupoCliente" class="form-control">
                        @foreach (var item in ViewBag.grupoCliente)
                        {
                            if (item.id_grupo == 100)
                            {
                                <option value="@item.id_grupo" selected>@item.grupo</option>
                            }
                            else
                            {
                                <option value="@item.id_grupo">@item.grupo</option>
                            }

                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="email"
                           class="col-form-label">Correo:</label>
                    <input class="form-control" id="email" type="text">
                </div>
                <div class="form-group">
                    <label for="telephone"
                           class="col-form-label">Telefono:</label>
                    <input class="form-control" id="telephone" type="text">
                </div>
                <div class="form-group">
                    <label for="direccion"
                           class="col-form-label">Direccion:</label>
                    <input class="form-control" id="direccion" type="text">
                </div>
                <div class="form-group">
                    <label for="departamento"
                           class="col-form-label">Departamento:</label>
                    <select class="form-control" id="departamento">
                        <optgroup label="Zona Occidental">
                            <option>Ahuachapan</option>
                            <option>Santa Ana</option>
                            <option>Sonsonate</option>

                        </optgroup>

                        <optgroup label="Zona Central">
                            <option>Cabañas</option>
                            <option>Chalatenango</option>
                            <option>Cuscatlán</option>
                            <option>La Libertad</option>
                            <option>La Paz</option>
                            <option>San Salvador</option>
                        </optgroup>
                        <optgroup label="Zona Oriental">
                            <option>La Union</option>
                            <option>Morazan</option>
                            <option>San Miguel</option>
                            <option>San Vicente</option>
                            <option>Usulutan</option>
                        </optgroup>
                    </select>
                </div>
                <div class="form-group">
                    <label for="tipoContribuyente"
                           class="col-form-label">Tipo de Contribuyente:</label>
                    <select class="form-control" id="tipoContribuyente" onchange="seleccionarContribuyente(this.value)">
                        <option value="1" selected>Natural</option>
                        <option value="2">Juridica</option>
                    </select>
                </div>
                <div id="personaNatural">
                    <div class="form-group">
                        <label for="dui"
                               class="col-form-label">DUI:</label>
                        <input class="form-control" id="dui" type="text">
                    </div>
                </div>
                <div id="personaJuridica" style="display:none">
                    <div class="form-group">
                        <label for="nrc"
                               class="col-form-label">NRC:</label>
                        <input class="form-control" id="nrc" type="text">
                    </div>
                    <div class="form-group">
                        <label for="contribuyente"
                               class="col-form-label">Contribuyente:</label>
                        <select class="form-control" id="contribuyente">

                            <option value="02">Pequeno o Mediano</option>
                            <option value="01">Grande</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nit"
                               class="col-form-label">NIT:</label>
                        <input class="form-control" id="nit" type="text">
                    </div>
                </div>
            </div>
            <!-- /modal body -->
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm"
                        data-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="enviarDatos()">
                    Guardar
                </button>
            </div>
            <!-- /modal footer -->

        </div>
        <!-- /modal content -->

    </div>
</div>
<!-- /modal -->
<!-- Modal -->
<div class="modal fade" id="form-modalProducto" tabindex="-1" role="dialog"
     aria-labelledby="model-8"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal Content -->
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="modal-title" id="model-8">Nombre de producto</h3>
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- /modal header -->
            <!-- Modal Body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="cantidad"
                           class="col-form-label">Cantidad:</label>
                    <input class="form-control" type="number" id="cantidad" min="0" value="0" style="font-size:30px"/>
                </div>
            </div>
            <!-- /modal body -->
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm"
                        data-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="agregarCarrito()">
                    Agregar al carrito
                </button>
            </div>
            <!-- /modal footer -->

        </div>
        <!-- /modal content -->

    </div>
</div>
<!-- /modal -->