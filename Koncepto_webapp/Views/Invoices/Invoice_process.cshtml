<!-- Modal -->
<div class="modal fade" id="form-modal" tabindex="-1" role="dialog"
     aria-labelledby="model-8"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal Content -->
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="modal-title" id="model-8">Nuevo cliente</h3>
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- /modal header -->
            <!-- Modal Body -->
            <div class="modal-body">
                    <div class="form-group">
                        <label for="name"
                               class="col-form-label">Nombre de cliente:</label>
                        <input class="form-control" id="name" type="text">
                    </div>
                    <div class="form-group">
                        <label for="message-text"
                               class="col-form-label">Grupo:</label>
                        <select id="grupoCliente" class="form-control">
                            @foreach (var item in ViewBag.grupoCliente)
                            {
                                if (item.id_grupo == 100)
                                {
                                       <option value="@item.id_grupo" selected>@item.grupo</option>
                                }
                                else {
                                       <option value="@item.id_grupo">@item.grupo</option>
                                }

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="email"
                               class="col-form-label">Correo:</label>
                        <input class="form-control" id="email" type="text">
                    </div>
                    <div class="form-group">
                        <label for="telephone"
                               class="col-form-label">Telefono:</label>
                        <input class="form-control" id="telephone" type="text">
                    </div>
                    <div class="form-group">
                        <label for="direccion"
                               class="col-form-label">Direccion:</label>
                        <input class="form-control" id="direccion" type="text">
                    </div>
                    <div class="form-group">
                        <label for="departamento"
                               class="col-form-label">Departamento:</label>
                        <select class="form-control" id="departamento" >
                            <optgroup label="Zona Occidental">
                                <option>Ahuachapan</option>
                                <option>Santa Ana</option>
                                <option>Sonsonate</option>
                                
                            </optgroup>

                            <optgroup label="Zona Central">
                                <option>Cabañas</option>
                                <option>Chalatenango</option>
                                <option>Cuscatlán</option>
                                <option>La Libertad</option>
                                <option>La Paz</option>
                                <option>San Salvador</option>
                            </optgroup>
                            <optgroup label="Zona Oriental">
                                <option>La Union</option>
                                <option>Morazan</option>
                                <option>San Miguel</option>
                                <option>San Vicente</option>
                                <option>Usulutan</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="tipoContribuyente"
                               class="col-form-label">Tipo de Contribuyente:</label>
                        <select class="form-control" id="tipoContribuyente" onchange="seleccionarContribuyente(this.value)">
                            <option value="1" selected>Natural</option>
                            <option value="2">Juridica</option>
                        </select>
                    </div>
                    <div id="personaNatural">
                        <div class="form-group">
                            <label for="dui"
                                   class="col-form-label">DUI:</label>
                            <input class="form-control" id="dui" type="text">
                        </div>
                    </div>
                    <div id="personaJuridica" style="display:none">
                        <div class="form-group">
                            <label for="nrc"
                                   class="col-form-label">NRC:</label>
                            <input class="form-control" id="nrc" type="text">
                        </div>
                        <div class="form-group">
                            <label for="contribuyente"
                                   class="col-form-label">Contribuyente:</label>
                            <select class="form-control" id="contribuyente">

                                <option value="02">Pequeno o Mediano</option>
                                <option value="01">Grande</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="nit"
                                   class="col-form-label">NIT:</label>
                            <input class="form-control" id="nit" type="text">
                        </div>
                    </div>
            </div>
            <!-- /modal body -->
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm"
                        data-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="enviarDatos()">
                    Guardar
                </button>
            </div>
            <!-- /modal footer -->

        </div>
        <!-- /modal content -->

    </div>
</div>
<!-- /modal -->